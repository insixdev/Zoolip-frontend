{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./front/src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["front/src/**/*.ts", "front/src/**/*.tsx"],
  "exclude": ["node_modules"]
}

